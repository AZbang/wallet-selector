{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "paths": {
      "@paras-wallet-selector/core": [
        "packages/core/src/index.ts"
      ],
      "@paras-wallet-selector/here-wallet": [
        "packages/here-wallet/src/index.ts"
      ],
      "@paras-wallet-selector/ledger": [
        "packages/ledger/src/index.ts"
      ],
      "@paras-wallet-selector/math-wallet": [
        "packages/math-wallet/src/index.ts"
      ],
      "@paras-wallet-selector/meteor-wallet": [
        "packages/meteor-wallet/src/index.ts"
      ],
      "@paras-wallet-selector/modal-ui": [
        "dist/packages/modal-ui"
      ],
      "@paras-wallet-selector/my-near-wallet": [
        "packages/my-near-wallet/src/index.ts"
      ],
      "@paras-wallet-selector/near-wallet": [
        "packages/near-wallet/src/index.ts"
      ],
      "@paras-wallet-selector/nightly": [
        "packages/nightly/src/index.ts"
      ],
      "@paras-wallet-selector/nightly-connect": [
        "packages/nightly-connect/src/index.ts"
      ],
      "@paras-wallet-selector/sender": [
        "packages/sender/src/index.ts"
      ],
      "@paras-wallet-selector/wallet-connect": [
        "packages/wallet-connect/src/index.ts"
      ],
      "@paras-wallet-selector/wallet-utils": [
        "packages/wallet-utils/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
